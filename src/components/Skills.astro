---
import TitleSection from "./TitleSection.astro";
import SkillsCard from "./SkillsCard.astro";

import { useI18n } from "../i18n";

const { currentLocale } = Astro;
const i18n = useI18n({ currentLocale });
---

<section
  id="skills"
  class="w-11/12 md:w-3/4 flex flex-col gap-y-5 md:gap-y-10 items-center"
>
  <TitleSection title={i18n.HEADER.SKILLS} />

  <div class="grid grid-cols-1 sm:grid-cols-3 gap-5">
    {
      i18n.SKILLS.map((skills) => (
        <SkillsCard
          color={skills.COLOR}
          id={skills.ID}
          title={skills.TITLE}
          description={skills.DESCRIPTION}
        />
      ))
    }
  </div>
</section>
