---
import TitleSection from "./TitleSection.astro";

import { useI18n } from "../i18n";

const { currentLocale } = Astro;
const i18n = useI18n({ currentLocale });
---

<section
  id="about"
  class="w-11/12 md:w-3/4 flex flex-col gap-y-5 md:gap-y-10 items-center"
>
  <TitleSection title={i18n.HEADER.ABOUT} />

  <div
    class="w-full flex flex-col md:flex-row md:flex-nowrap gap-y-5 md:gap-y-0 md:gap-x-10 items-center"
  >
    <img src="/img/self.webp" class="w-3/4 md:w-1/4 rounded-full" />

    <div class="w-full md:w-3/4 flex flex-col gap-y-5">
      <h1 class="text-xl md:text-3xl text-center">
        {i18n.ABOUT.TITLE}
      </h1>
      <p class="text-sm md:text-lg text-center">
        {i18n.ABOUT.DESCRIPTION1}
      </p>
      <p class="text-sm md:text-lg text-center">
        {i18n.ABOUT.DESCRIPTION2}
      </p>
    </div>
  </div>
</section>
