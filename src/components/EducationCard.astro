---
import { useI18n } from "../i18n";

interface Props {
  img: string;
  title: string;
  description: string;
  date: string;
}

const { img, title, description, date } = Astro.props;

const { currentLocale } = Astro;
const i18n = useI18n({ currentLocale });
---

<div
  class="w-full flex flex-col md:flex-row md:flex-nowrap gap-y-5 md:gap-y-0 md:gap-x-10 items-center md:items-stretch"
>
  <img src={img} class="w-1/2 md:w-1/6" />

  <div
    class="md:w-5/6 flex flex-col border-l-0 md:border-l md:pl-10 gap-y-3 md:gap-y-0 items-center md:items-start justify-evenly"
  >
    <h1 class="text-lg md:text-2xl text-center md:text-left">
      {title}
    </h1>
    <h2 class="text-base md:text-xl text-center md:text-left">
      {description}
    </h2>
    <h3 class="text-sm md:text-lg text-center md:text-left">
      {date}
    </h3>
  </div>
</div>
